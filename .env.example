# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False
API_RELOAD=False

# Logging Settings
LOG_LEVEL=INFO

# Database Settings (Not required since SQLite is used in development)
# For production, use these with Render PostgreSQL
# DB_HOST=postgres.render.com
# DB_PORT=5432
# DB_NAME=remote_jobs
# DB_USER=remote_jobs_admin
# DB_PASSWORD=your-password

# Email Settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
